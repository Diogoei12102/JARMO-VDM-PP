			dcl g: Game := new Game();
			
			dcl p1: Position := new Position(0,0,0);
			dcl p2: Position := new Position(0,1,1);
			dcl p3: Position := new Position(0,2,1);
			dcl p4: Position := new Position(0,3,0);
